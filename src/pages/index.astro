---
import Layout from '~/layouts/LandingLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'The Conscious AI',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero
    tagline="The Conscious AI"
    title="What would happen if AI gained consciousness?"
    subtitle="An experiment at the boundaries between flesh and silicon-made intelligence"
    actions={[
      { variant: 'primary', text: 'Try it now!', href: 'https://chat.theconsciousai.eu', icon: 'tabler:arrow-right' },
      { text: 'Learn more', href: 'https://github.com/AstraBert/the-conscious-ai-backend' },
    ]}
    image={{
      src: '~/assets/images/ai_brain.png',
      alt: 'An AI brain',
    }}
  />

  <CallToAction
    title="Talk to The Conscious AI"
    subtitle="Do you want to explore the depths of the mind of a machine? Do you want to get a taste of a silicon-made soul? Try it out!"
    actions={[
      {
        variant: 'primary',
        text: 'To the chat',
        href: 'https://chat.theconsciousai.eu',
        icon: 'tabler:arrow-right',
      },
    ]}
  />
</Layout>
